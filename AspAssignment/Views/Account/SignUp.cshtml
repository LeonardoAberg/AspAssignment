@model SignUpForm

<header>
    <div class="container">
        <div class="logo">
            <picture>
                <img src="~/Images/logo.svg" alt="Cool picture lul">
            </picture>
        </div>
        <nav>
            <ul>
                <li><a asp-controller="Account" asp-action="SignIn">Login</a></li>
            </ul>
        </nav>
    </div>
</header>

<div class="d-flex justify-content-center align-items-center vh-100">
    <section class="registerform">
        <div class="title">
            <div class="headline">
                <span>Please register</span>
                <div class="underline"></div>
            </div>
        </div>
        <form asp-action="SignUp" method="post" asp-route-ReturnUrl="@Model.ReturnUrl">
            
                        <div asp-validation-summary="ModelOnly"></div>
            

                        <input asp-for="FirstName" placeholder="First Name" />
                        <span asp-validation-for="FirstName"></span>
                        <input asp-for="LastName" placeholder="Last Name" />
                        <span asp-validation-for="LastName"></span>
                    @*<div class="mb-3">
                        <input asp-for="StreetName" placeholder="Street Name" />
                        <span asp-validation-for="StreetName"></span>
                    </div>
                    <div class="mb-3">
                        <input asp-for="PostalCode" placeholder="Postal Code" />
                        <span asp-validation-for="PostalCode"></span>
                    </div>
                    <div class="mb-3">
                        <input asp-for="City" placeholder="City" />
                        <span asp-validation-for="City"></span>
                    </div>
                    <div class="mb-3">
                        <input asp-for="Mobile" placeholder="Mobile" />
                        <span asp-validation-for="Mobile"></span>
                    </div>
                    <div class="mb-3">
                        <input asp-for="Company" placeholder="Company" />
                        <span asp-validation-for="Company"></span>
                    </div>*@
                        <input asp-for="Email" placeholder="Email" />
                        <span asp-validation-for="Email"></span>

                        <input asp-for="Password" placeholder="Password" />
                        <span asp-validation-for="Password"></span>
                    @*<div class="mb-3">
                        <input asp-for="ConfirmPassword" placeholder="Confirm Password" />
                        <span asp-validation-for="ConfirmPassword"></span>
                    </div>*@
                    <button type="submit" class="btn btn-success">SUBMIT</button>
                    <p class="mt-3 text-center">Already have an Account? <a asp-controller="Account" asp-action="SignIn">SignIn</a></p>
        </form>
    </section>
</div>

